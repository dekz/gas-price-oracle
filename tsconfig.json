{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017"],
        "target": "es6",
        "outDir": "lib",
        "strict": false,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "integration-test/**/*.ts"]
}
